root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = off

[*.{kt,kts}]
continuation_indent_size = 4
ktlint_standard_multiline-expression-wrapping = disabled

[*.{yml,yaml}]
indent_size = 2
