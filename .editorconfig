root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
continuation_indent_size = 4
max_line_length = 120

[imported/**.{kt,kts}]
max_line_length = off

[**/generated/**.{kt,kts}]
max_line_length = off

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
